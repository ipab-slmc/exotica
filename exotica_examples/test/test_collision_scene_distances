    np.testing.assert_allclose(p[0].contact_2, expected_contact_2, atol=CLOSE_DISTANCE_ATOL)
    np.testing.assert_allclose(p[0].normal_1, expected_normal_1, atol=CLOSE_DISTANCE_ATOL)
    np.testing.assert_allclose(p[0].normal_2, expected_normal_2, atol=CLOSE_DISTANCE_ATOL)
    print('mesh_vs_mesh_distance: _distance, Contact Points, Normals: PASSED')


