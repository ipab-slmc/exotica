    debug_publish(p, scene)
    np.testing.assert_equal(len(p), 1)
    print(p)
    np.testing.assert_allclose(p[0].distance, -.1, atol=CLOSE_DISTANCE_ATOL)
    np.testing.assert_allclose(p[0].contact_1, expected_contact_2)
    np.testing.assert_allclose(p[0].contact_2, expected_contact_1)
    np.testing.assert_allclose(p[0].normal_1, expected_normal_2)
    np.testing.assert_allclose(p[0].normal_2, expected_normal_1)
    print('mesh_vs_primitive_cylinder_penetrating: _distance, Contact Points, Normals: PASSED')


