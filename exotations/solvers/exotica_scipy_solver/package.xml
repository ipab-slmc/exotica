<?xml version="1.0"?>
<package format="3">
  <name>exotica_scipy_solver</name>
  <version>6.2.0</version>
  <description>SciPy-based Python solvers for Exotica</description>

  <maintainer email="opensource@wolfgangmerkt.com">Wolfgang Merkt</maintainer>
  <author>Wolfgang Merkt</author>

  <license>BSD</license>
  <!-- <url type="website">http://wiki.ros.org/exotica_scipy_solver</url> -->

  <buildtool_depend>catkin</buildtool_depend>
  <exec_depend>exotica_core</exec_depend>
  <exec_depend condition="$ROS_PYTHON_VERSION == 2">python-numpy</exec_depend>
  <exec_depend condition="$ROS_PYTHON_VERSION == 2">python-scipy</exec_depend>
  <exec_depend condition="$ROS_PYTHON_VERSION == 3">python3-numpy</exec_depend>
  <exec_depend condition="$ROS_PYTHON_VERSION == 3">python3-scipy</exec_depend>
</package>
