<?xml version="1.0"?>
<package format="2">
  <name>exotica_pinocchio_dynamics_solver</name>
  <version>6.1.1</version>
  <description>Dynamics solver plug-in using Pinocchio for Exotica</description>

  <maintainer email="wolfgang@robots.ox.ac.uk">Wolfgang Merkt</maintainer>
  <license>BSD</license>

  <buildtool_depend>catkin</buildtool_depend>
  <build_depend>exotica_core</build_depend>
  <build_depend>roscpp</build_depend>
  <build_depend>pinocchio</build_depend>
  <build_export_depend>exotica_core</build_export_depend>
  <build_export_depend>roscpp</build_export_depend>
  <build_export_depend>pinocchio</build_export_depend>
  <exec_depend>exotica_core</exec_depend>
  <exec_depend>roscpp</exec_depend>
  <exec_depend>pinocchio</exec_depend>

  <export>
    <exotica_core plugin="${prefix}/exotica_plugins.xml" />
  </export>
</package>
