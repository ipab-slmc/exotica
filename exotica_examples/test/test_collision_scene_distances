    np.testing.assert_equal(scene.is_state_valid(True), False)
    print('primitive_sphere_vs_primitive_box_penetrating: is_state_valid(True): PASSED')

    p = scene.get_collision_distance("A", "B")
    debug_publish(p, scene)
    np.testing.assert_equal(len(p), 1)
    np.testing.assert_allclose(p[0].distance, -0.4, atol=PENETRATING_DISTANCE_ATOL)
    expected_contact_1 = np.array([0.2, 0, 0])
    expected_contact_2 = np.array([-0.2, 0, 0])
    expected_normal_1 = np.array([-1, 0, 0])
    expected_normal_2 = np.array([1, 0, 0])
    np.testing.assert_allclose(p[0].contact_1, expected_contact_1, atol=AFAR_DISTANCE_ATOL)
    np.testing.assert_allclose(p[0].contact_2, expected_contact_2, atol=AFAR_DISTANCE_ATOL)
    np.testing.assert_allclose(p[0].normal_1, expected_normal_1, atol=AFAR_DISTANCE_ATOL)
    np.testing.assert_allclose(p[0].normal_2, expected_normal_2, atol=AFAR_DISTANCE_ATOL)
    print('primitive_sphere_vs_primitive_box_penetrating: _distance, Contact Points, Normals: PASSED')


